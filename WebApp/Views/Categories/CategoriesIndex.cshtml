@model List<CoreBusiness.Category>

@section Title
{
    <h3>Categories</h3>
}

@section Scripts
{
    <script>
        function confirmDelete() {
            return confirm("Are you sure that you want to delete this category?");
        }
    </script>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                  
                    @* Generate a link using tag helpers *@
                    <td><a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id="@category.Id">Edit</a></td>


                    <td><a class="btn btn-link" asp-controller="categories" asp-action="delete" asp-route-id="@category.Id" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-primary" asp-controller="categories" asp-action="add">Add</a>